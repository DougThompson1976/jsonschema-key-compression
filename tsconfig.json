{
    "compilerOptions": {
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "noImplicitAny": false,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "suppressImplicitAnyIndexErrors": true,
        "moduleResolution": "node",
        "target": "es5",
        "outDir": "./dist",
        "lib": [
            "es7",
            "dom"
        ]
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2
    },
    "include": [
        "src",
        "test"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "dist"
    ],
    "compileOnSave": false
}
